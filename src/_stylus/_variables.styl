bg-color = #fff
txt-color = #262626
sub-color = #F4F4F4
hover-color = #ACACAC
content-width = 1120px
menu-height = 80px

sp()
  @media screen and (max-width: 480px) 
    {block}

tb()
  @media screen and (max-width: 1120px) 
    {block}

font-style = @block {
  font-family 'Lato', sans-serif
  font-weight bold
}

link = @block {
  background bg-color
  border-radius 4px
  padding 14px 24px
  border none
  outline none 
  appearance none
  font-size 14px
  margin 24px 0
  cursor pointer
}

