.header 
  margin 0 auto
  height 120px
  display flex
  align-items center
  justify-content space-between
  max-width content-width

.menu
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 100
  background rgba(255, 255, 255, .6)
  flex-direction row
  list-style none
  {flex-center}
  flex-direction column
  display none
  li
    max-width content-width

.menu-trigger, .menu-trigger span 
  z-index 101
  display inline-block
  transition all .2s
  box-sizing border-box
.menu-trigger 
  position relative
  width 40px
  height 20px
  span
    position absolute
    left 0
    width 100%
    height 2px
    background-color txt-color
    border-radius 2px
    &:nth-of-type(1)
      top 0
      animation menu-bar01 .75s forwards
    &:nth-of-type(2)
      bottom 0
      animation menu-bar02 .75s forwards
      width 65%
  &:not(.active):hover
    span
      // &:nth-of-type(1)
      //   width 65%
      &:nth-of-type(2)
        width 100%
  &.active
    span
      &:nth-of-type(1) 
        animation active-menu-bar01 .75s forwards
        width 100%
      &:nth-of-type(2) 
        animation active-menu-bar02 .75s forwards
        width 100%


@keyframes menu-bar01 
  0% 
    transform translateY(9px) rotate(25deg)
  50% 
    transform translateY(9px) rotate(0)
  100% 
    transform translateY(0) rotate(0)

@keyframes menu-bar02 
  0% 
    transform translateY(-9px) rotate(-25deg)
  50% 
    transform translateY(-9px) rotate(0)
  100% 
    transform translateY(0) rotate(0)

@keyframes active-menu-bar01 
  0% 
    transform translateY(0) rotate(0)
  50% 
    transform translateY(9px) rotate(0)
  100% 
    transform translateY(9px) rotate(25deg)

@keyframes active-menu-bar02 
  0% 
    transform translateY(0) rotate(0)
  50% 
    transform translateY(-9px) rotate(0)
  100% 
    transform translateY(-9px) rotate(-25deg)

.footer-container
  background txt-color
  width 100%
.footer
  margin 0 auto
  padding 16px 0 48px
  max-width content-width
  color bg-color

