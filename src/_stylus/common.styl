.header 
  margin 0 auto
  width calc(100% - 80px)
  padding 0 40px
  height menu-height
  display flex
  align-items center
  justify-content space-between
  position fixed
  z-index 100
  color txt-color

.menu
  display flex
  list-style none 
  li
    max-width content-width
    margin 0 16px
    {font-style}
    position relative
    &:last-child
      margin 0 0 0 16px
    &::after
      content ''
      width 4px
      height 4px 
      border-radius 1px
      background txt-color
      position absolute
      left calc(50% - 2px)
      bottom -4px


.menu-trigger, .menu-trigger span 
  z-index 101
  display inline-block
  transition all .2s
  box-sizing border-box
.menu-trigger 
  position relative
  width 40px
  height 20px
  display none
  span
    position absolute
    left 0
    width 100%
    height 2px
    background-color txt-color
    border-radius 2px
    &:nth-of-type(1)
      top 0
      animation menu-bar01 .75s forwards
    &:nth-of-type(2)
      bottom 0
      animation menu-bar02 .75s forwards
      width 65%
  &:not(.active):hover
    span
      // &:nth-of-type(1)
      //   width 65%
      &:nth-of-type(2)
        width 100%
  &.active
    span
      &:nth-of-type(1) 
        animation active-menu-bar01 .75s forwards
        width 100%
      &:nth-of-type(2) 
        animation active-menu-bar02 .75s forwards
        width 100%


@keyframes menu-bar01 
  0% 
    transform translateY(9px) rotate(25deg)
  50% 
    transform translateY(9px) rotate(0)
  100% 
    transform translateY(0) rotate(0)

@keyframes menu-bar02 
  0% 
    transform translateY(-9px) rotate(-25deg)
  50% 
    transform translateY(-9px) rotate(0)
  100% 
    transform translateY(0) rotate(0)

@keyframes active-menu-bar01 
  0% 
    transform translateY(0) rotate(0)
  50% 
    transform translateY(9px) rotate(0)
  100% 
    transform translateY(9px) rotate(25deg)

@keyframes active-menu-bar02 
  0% 
    transform translateY(0) rotate(0)
  50% 
    transform translateY(-9px) rotate(0)
  100% 
    transform translateY(-9px) rotate(-25deg)

.footer-container
  width 100%
  background sub-color
  color txt-color
  padding 16px 40px 0
  border-top 1px solid txt-color
  box-sizing border-box
.footer
  display flex
  flex-wrap wrap
  margin 0 auto
  &__part
    border-right 1px solid txt-color
    display flex
    flex-wrap wrap
  &__part:first-child
    flex-basis 50%
    .footer__part__txt
      width 50%
  &__part:nth-of-type(2)
    flex-basis 25%
    padding 0 32px
  span 
    {font-style}
    font-size 12px
    display block
    flex-basis 100%
  h3 
    font-size 20px
    margin 24px 0
  .copyright
    border-top 1px solid txt-color
    width 100%
    padding 16px 0

.link
  background bg-color
  border-radius 4px
  padding 14px 24px
  border none
  outline none 
  appearance none
  font-size 14px
  margin 24px 0
  cursor pointer
  &:hover
    color hover-color

.top-button 
  display none

+tb()
  .header 
    height 80px
    padding 0 24px
    width calc(100% - 48px)
  .logo 
    width 80px
  .footer-container
    padding 16px 24px 0
  .footer
    &__part
      border none
    &__part:first-child
      flex-basis calc(100% / 3 * 2)
    &__part:nth-of-type(2)
      flex-basis calc(100% / 3)
      padding 0 

+sp()
  .menu-trigger
    display initial
  .menu
    display none
  .footer-container
    padding 0
  .footer
    &__part
      padding 16px 24px
    &__part:first-child
      flex-basis 100%
      .footer__part__txt
        width 100%
    &__part:nth-of-type(2)
      border-top 1px solid txt-color
      flex-basis 100%
      padding 16px 24px
    .copyright
      padding 16px 24px
    .link
      margin 16px 0 24px
  .top-button
    display initial
    position fixed
    right 24px
    bottom 24px
    background txt-color
    color sub-color
    width 48px 
    height 48px
    border-radius 4px
    { flex-center }
