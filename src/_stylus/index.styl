@import "_variables.styl"

.top 
    margin 0 auto
    height 100vh
    max-width content-width
    text-align center
    {flex-center}
    h1
        display none
    &__img
        width 560px
        margin 0 auto
    &__txt
        letter-spacing .2em
        line-height 2.4em
        text-align left
        padding 0 0 0 56px 
    
.main
    margin 0 auto 120px
    max-width content-width
.content
    margin 48px 0
    padding 72px 96px
    border-radius 16px
    line-height 24px
    display block
    position relative
    transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
    -webkit-transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
    &__tag
        {font-style}
        font-size 20px
        letter-spacing .1em
    &__ttl
        font-size 26px
    &:first-child
        cursor default
        // &:hover
        //     background bg-color
        // &:hover::after
        //     clip-path inset(0 calc(100% - 64px) calc(100% - 64px) 0)
        //     -webkit-clip-path inset(0 calc(100% - 64px) calc(100% - 64px) 0)
        // &:hover::before
        //     clip-path inset(calc(100% - 64px) 0 0 calc(100% - 64px))
        //     -webkit-clip-path inset(calc(100% - 64px) 0 0 calc(100% - 64px))
    .link
        transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        {font-style}
        font-weight normal
        border 1px solid txt-color
        &::before
            content none
        &::after
            content none
        &:hover
            color txt-color

    p 
        text-align justify
    &::after
        border-left solid 1px txt-color
        border-top solid 1px txt-color
        border-radius 16px
        height 100%
        width 100%
        left 0
        top 0
        content ""
        display block
        position absolute
        transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        -webkit-transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        clip-path inset(0 calc(100% - 64px) calc(100% - 64px) 0)
        -webkit-clip-path inset(0 calc(100% - 64px) calc(100% - 64px) 0)
    &::before
        border-right solid 1px txt-color
        border-bottom solid 1px txt-color
        border-radius 16px
        height 100%
        width 100%
        left 0
        top 0
        content ""
        display block
        position absolute
        transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        -webkit-transition all .3s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        clip-path inset(calc(100% - 64px) 0 0 calc(100% - 64px))
        -webkit-clip-path inset(calc(100% - 64px) 0 0 calc(100% - 64px))
    &:hover::after
        clip-path inset(0 0 0 0)
        -webkit-clip-path inset(0 0 0 0)
        transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        -webkit-transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
    &:hover::before
        clip-path inset(0 0 0 0)
        -webkit-clip-path inset(0 0 0 0)
        transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        -webkit-transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
    &:hover
        color txt-color
        background sub-color
        transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        -webkit-transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
        .link
            transition all .7s cubic-bezier(0.55, 0.05, 0.22, 0.99)
            border 1px solid rgba(0, 0, 0, 0)

+tb()
    .top
        max-width 100%
        flex-direction column
        &__img
            width 400px
            margin 120px 0 32px
        &__txt
            width 400px
            padding 0
            margin 32px 0
    .main
        margin 0 24px 120px
        width calc(100% - 48px)

+sp()
    .top
        position relative
        &__img
            width 55%
            position absolute
            top 50%
            left 50%
            transform translateX(-50%) translateY(-50%)
            margin 0
        &__txt
            margin auto 0 24px 0
            text-align justify
            width calc(100% - 48px)
            line-height 1.8em
    .main
        margin 0
    .content
        width 100%
        margin 0
        padding 40px 24px
        border none 
        border-top 1px solid txt-color
        border-radius 0
        &__tag
            font-size 14px
        &__ttl
            font-size 22px
            margin 16px 0
        &__link
            { link }
            background sub-color
            display inline-block
            margin-top 16px
        &:last-child
            margin-bottom 80px
        &::after
            content none
        &::before
            content none