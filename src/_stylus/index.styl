@import "_variables.styl"

.top 
    margin 0 auto
    height 100vh
    max-width content-width
    text-align center
    &__img
        margin 36vh auto 120px
    &__txt
        letter-spacing .2em
        line-height 2.4em
    

.main
    margin 0 auto 120px
    max-width content-width
.content
    margin 48px 0
    padding 72px 96px
    border 1px solid txt-color
    border-radius 16px
    line-height 24px
    display block
    &__tag
        {font-style}
        font-size 20px
        letter-spacing .1em
    &__ttl
        font-size 26px
    &__link
        {font-style}
+tb()
    .top
        margin 0 16px
        &__img
            width 50%

    .main
        margin 0 16px
